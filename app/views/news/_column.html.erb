<% unless item.i18n_news.empty? %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to item.i18n_news.first.title, item %></h3>
  </div>
  <div class="panel-body">
    <%= item.i18n_news.first.intro %>
    <br />
    <%= link_to t('app.details'), item %>

    <small class="pull-right"><% item.get_tags.each do |tg| %>
      <span class="label label-info"><%= tg.tag.text %></span><% end %>
    </small>
  </div>
</div>
<% end %>
