<!DOCTYPE html>
<html>
<head>
  <title><%= t('app.title') %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default" role="navigation">
    <%= link_to t('app.title'), welcome_path, class: 'navbar-brand' %>
    <ul class="nav navbar-nav">
      <li<%= active_menu? 'news' %> id="news"><%= link_to t('app.menu_news'), news_index_path %></li>
      <li<%= active_menu? 'events' %> id="events"><%= link_to t('app.menu_events'), events_path %></li>
      <li<%= active_menu? 'community' %> id="community"><%= link_to t('app.menu_community'), welcome_path %></li>
      <li<%= active_menu? 'wiki' %> id="wiki"><%= link_to t('app.menu_wiki'), welcome_path %></li>
      <li<%= active_menu? 'articles' %> id="articles"><%= link_to t('app.menu_articles'), articles_path %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
        <% if @current_user %>
          <li><%= link_to @current_user.name + ': ' + t('sessions.logout'), logout_path %></li>
        <% end %>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Language <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li><%= link_to 'Русский', :locale=>'ru'%></li>
                <li><%= link_to 'Українська', :locale=>'ua'%></li>
                <li><%= link_to 'English', :locale=>'en'%></li>
            </ul></li>
    </ul>
</nav>

<div class="container">
  <div class="row">
    <div class="col-lg-10 col-offset-1">
      <% if flash[:error] %><div class="alert alert-danger"><%= flash[:error]
    %></div><% end %>
      <% if flash[:alert] %><div class="alert"><%= flash[:alert]
    %></div><% end %>
      <% if flash[:notice] %><div class="alert alert-info"><%= flash[:notice]
    %></div><% end %>
    </div>
  </div>

  <%= yield %>

  <br/>
  <br/>
  <div class="row">
    <div class="col-lg-12"><hr/></div>

    <div class="col-lg-8"><p class="text-muted">
      <%= t('app.copy').html_safe %></p>
    </div>
    <div class="col-lg-4"><p class="text-muted">
      <%= t('app.copy_authors').html_safe %></p>
    </div>
  </div>
</div>

</body>
</html>
