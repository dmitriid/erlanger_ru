<% unless @event.i18n_events.empty? %>
  <h2><%= @event.i18n_events.first.title %></h2>

  <%= @event.i18n_events.first.info %>

  <% if @event.googlemap_address %>
    <h2><%=t('event.location')%></h2>
    <p><%= @event.googlemap_address %></p>
    <br/>
    <%= render partial: 'events/googlemap',
              locals: {mapQuery: url_encode(@event.googlemap_address)} %>

    <br/>
    <h2><%=t('event.travel_info')%></h2>
    <p><%=t('event.travel_description')%></p>
    <form class="form-inline" role="form">
      <div class="form-group">
        <input class="form-control" id="origin" placeholder="Address or city or airport">
      </div>
      <input type="button" class="btn btn-primary" value="<%=t('event.travel_submit')%>"
        onclick="find_route('<%= @event.googlemap_address %>' )">
    </form>
  <% end %>
<% end %>