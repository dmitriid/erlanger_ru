<% unless item.i18n_events.empty? %>
  <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= item.i18n_events.first.title %>
        <%= item.i18n_events.first.city %>
        <span class="label label-default"><%= item.country_name %></span></h3>
  </div>
  <div class="panel-body">
    <%= item.i18n_events.first.info %><br/>
    <%= link_to t('app.details'), item %>

    <small class="pull-right"><% item.get_tags.each do |tg| %>
      <span class="label label-info"><%= tg.tag.text %></span><% end %></small>
  </div>
</div>
<% end %>