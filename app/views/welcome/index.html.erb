<div class="row">
  <div class="col-lg-8">
    <%= t('app.welcome').html_safe %>
    <%= link_to t('app.details') %>
  </div>
  <div class="col-lg-4">RSS</div>
</div>

<div class="row">
  <div class="col-lg-3">
    <h3><%=t('app.menu_news')%></h3>
    <%= render partial: "news/column", collection: @frontpage_news, as: :item %>
  </div>
  <div class="col-lg-3">
    <h3><%=t('app.menu_events')%></h3>
    <%= render partial: "events/column", collection: @frontpage_events, as: :item %>
  </div>
  <div class="col-lg-3">
    <h3><%=t('app.menu_articles')%></h3>
    <%= render partial: "articles/column", collection: @frontpage_articles, as: :item %>
  </div>
  <div class="col-lg-3">
    <h3><%=t('app.twitter_stream')%></h3>
    <% @pages.each do |tw| %>
      <%=  tw.id %><br />
    <% end %>
  </div>
</div>
